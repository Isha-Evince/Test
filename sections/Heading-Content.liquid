<div class="heading-with-content-section">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.content }}</p>
</div>
{% schema %}
{
  "name": "Heading with Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Enter heading here"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Enter content here</p>"
    }
  ],
  "presets": [
    {
      "name": "Heading With Content"
    }
  ]
}
{% endschema %}