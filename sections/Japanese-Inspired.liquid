<style>
  .japanese-custom-section {
    display: flex;
    align-items: center;
    color: black;
    padding: 20px;
    background-color: #3d4d47; /* Background color */
  }
  .image-container-1 {
    flex: 0 0 auto; /* Disable flex growth for the image container */
    width: auto; /* Ensure the container's width adjusts based on the image size */
    margin-right: 20px;
    overflow: hidden; /* Hide any overflowing content */
  }

  .image-block img {
    width: 100%;
    height: auto;
    object-fit: cover; /* Ensure the image covers the entire container */
    object-position: left; /* Align the image to the left side */
  }

  .text-container-1 {
    flex: 2;
    color: white;
  }

  .custom-button-1 {
    padding: 10px 20px;
    background-color: #bf1741;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none; /* Ensure no underline on the button */
  }

  .input-container {
    margin-top: 10px;
  }

  .input-container input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }
</style>

<div class="japanese-custom-section">
  <div class="image-container-1">
    <div class="image-block">
      <img src="{{ section.settings.image | img_url: 'large' }}" alt="Image">
    </div>
  </div>
  <div class="text-container-1">
    <img src="{{ section.settings.image_logo | img_url: 'large' }}" alt="Image">
    <h2 style="color: white;">{{ section.settings.heading }}</h2>
    <p style="color: white;">{{ section.settings.description }}</p>
     <div class="button-container-1">
      <a href="{{ section.settings.product_link }}" class="custom-button-1">{{ section.settings.button_label }}</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Japanese Inspired",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_logo",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "product_link",
      "label": "Product Link"
    }
  ],
  "presets": [
    {
      "name": "Japanese Inspired"
    }
  ]
}
{% endschema %}
