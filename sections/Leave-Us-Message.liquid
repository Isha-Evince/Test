<style>
 .split-section {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  .left-section {
    flex: 1;
    padding-right: 20px; /* Adjust spacing between sections */
    padding-left: 20px;
  }

  .right-section {
    flex: 1;
    padding-left: 20px; /* Adjust spacing between sections */
    padding-top: 20px;
  }

  .form-input {
    margin-bottom: 20px; /* Adjust spacing between form inputs */
  }

  .inline-elements {
    display: flex; /* Display inline */
    flex-direction: row; /* Arrange elements horizontally */
    flex-wrap: wrap; /* Allow elements to wrap to the next line if needed */
    gap: 20px; /* Adjust spacing between inline elements */
  }

  .inline-elements p {
    margin-bottom: 10px; /* Adjust spacing between inline elements */
    flex-basis: 100%; /* Each item should take up full width initially */
  }

  .inline-elements p span {
    width: 100px; /* Adjust label width */
    margin-right: 10px; /* Adjust spacing between label and value */
  }

  .custom-button-contact-now {
    padding: 10px 20px;
    background-color: black;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none; /* Ensure no underline on the button */
  }
</style>

<div class="split-section">
  <div class="left-section">
    <h2>{{ section.settings.heading }}</h2>

    <div class="inline-elements">
      <p><span><b>{{section.settings.email }}</span> {{ section.settings.phone_no }}</b></p>
      <p><span>{{ section.settings.email_display }}</span> {{ section.settings.phone_no_display }}</p>
    </div>

    <b><p>{{ section.settings.address }}</p></b>
    <p>{{ section.settings.address_display }}</p>
    <b><p>{{ section.settings.social_media }}</p></b>
  </div>
  <div class="right-section">
    <h2>{{ section.settings.contact_us_heading }}</h2>
    <p>{{ section.settings.contact_us_content }}</p>
    <!-- Right section content (form) -->
    <form action="/contact" method="post">
      <div class="form-input">
        <input type="text" id="name" name="name" placeholder = "name" >
      </div>
      <div class="form-input">
        <input type="email" id="email" name="email"  placeholder= "email">
      </div>
      <div class="form-input">
        <input type="tel" id="phone" name="phone" placeholder= "phone">
      </div>
      <div class="form-input">
        <textarea id="message" name="message" rows="5" placeholder= "Message" ></textarea>
      </div>
      <div class="button-container">
      <a href="{{ section.settings.contact_link }}" class="custom-button-contact-now">{{ section.settings.button_label }}</a>
    </div>
    </form>
  </div>
</div>


