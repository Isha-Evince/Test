<style>
  .custom-section-newsletter {
    display: flex;
    flex-direction: column; /* Set flex direction to column */
    align-items: center;
    color: black;
    padding: 20px;
  }

  .text-container-newsletter {
    width: 70%; /* Adjust the width as needed */
    text-align: left; /* Align text to the left */
    margin-bottom: 20px; /* Add margin bottom for spacing */
    word-wrap: break-word; /* Allow long words to break and wrap to the next line */
    font-weight: bold;
    font-size: x-large;
  }

  .email-container-newsletter {
    display: flex;
    align-items: center;
    margin-bottom: 20px; /* Add margin bottom for spacing */
  }

  .email-container-newsletter input {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-right: 10px; /* Add margin right for spacing between input and button */
    flex: 1; /* Allow input to grow to fill remaining space */
  }

  .description-container-newsletter {
    width: 70%; /* Adjust the width as needed */
    text-align: left; /* Align text to the left */
    word-wrap: break-word; /* Allow long words to break and wrap to the next line */
  }

  .custom-button-banks-newsletter {
    padding: 10px 20px;
    background-color: #e62525;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
  }
</style>

<div class="custom-section-newsletter">
  <div class="text-container-newsletter">
    <p style="max-width: 300px;">{{ section.settings.text }}</p> <!-- Adjust the max-width as needed -->
  </div>
  <div class="email-container-newsletter">
    <input type="email" name="email" placeholder="Enter your email">
    <a href="{{ section.settings.button_url }}" class="custom-button-banks-newsletter">{{ section.settings.button_text }}</a>
  </div>
  <div class="description-container-newsletter">
    <p>{{ section.settings.description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Custom Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Custom Newsletter"
    }
  ]
}
{% endschema %}
