      <button class="tab-btn" data-target="#orders">Orders</button>
      <button class="tab-btn" data-target="#addresses">Address</button>
      <button class="tab-btn" data-target="#wishlist">Wishlist</button>
      <button class="tab-btn" data-target="#change-password">Change Password</button>
    </div>
  </div>

  <div class="account-content">
    <div id="my-profile" class="tab-pane active">
      <h3> First Name  Last Name</h3>
      <h2>{{ customer.first_name }} {{ customer.last_name }}</h2>
      <h3>Email Id:</h3>
      <p>{{ customer.email }}</p>
