{{ 'customer.css' | asset_url | stylesheet_tag }}
<style>
 .account-container {
  display: flex;
}

.account-sidebar {
  width: 200px; /* Adjust the width as needed */
}

.tab-nav {
  display: flex;
  flex-direction: column;
}

.tab-btn {
  background-color: transparent;
  border: none;
  padding: 10px;
  cursor: pointer;
  transition: background-color 0.3s;
  text-align: left;
  white-space: nowrap; /* Prevent text from wrapping */
  overflow: hidden; /* Hide the overflowing text */
  text-overflow: ellipsis; /* Show ellipsis for long text */
}

.tab-btn.active {
  background-color: #f1f1f1;
}

.tab-btn:hover {
  background-color: #e9e9e9;
}

.account-content {
  flex: 1;
  padding: 20px;
}

.tab-pane {
  display: none;
}

.tab-pane.active {
  display: block;
}

.customer-summary {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.customer-summary__item {
  text-align: center;
}

.customer-summary__item h3 {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.customer-summary__item p {
  font-size: 14px;
  color: #666;
}
</style>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="customer account section-{{ section.id }}-padding">
  <div>
    <div class="customer-summary">
  <div class="customer-summary__item">
    <h3>Total spent</h3>
    <p>{{ customer.total_spent | money_with_currency }}</p>
  </div>
  <div class="customer-summary__item">
    <h3>All orders</h3>
    <p>{{ customer.orders.size }}</p>
  </div>
  <div class="customer-summary__item">
    <h3>Addresses</h3>
    <p>{{ customer.addresses_count }}</p>
  </div>
</div>
